import socket
import threading

HOST = '127.0.0.1'
PORT = 55555

server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
server.bind((HOST, PORT))
server.listen()

clients = []
nicknames = []


# Controle de banimentos e censura

PALAVRAS_PROIBIDAS = ["idiota", "burro", "imbecil", "burrao"]
banidos = set()
infracoes = {}  # conta quantas vezes cada usuÃ¡rio foi avisado

def filtrar_mensagem(texto):
    for palavra in PALAVRAS_PROIBIDAS:
        if palavra.lower() in texto.lower():
            texto = texto.lower().replace(palavra.lower(), "***")
    return texto



def broadcast(message):
    for client in clients[:]:
        try:
            client.send(message)
        except:
            if client in clients:
                clients.remove(client)


def handle(client, nickname):
    while True:
        try:
            message = client.recv(1024)
            texto = message.decode('utf-8')

           
            # verificaÃ§Ã£o de banimento
            if nickname in banidos:
                client.send("VocÃª foi banido do chat.\n".encode('utf-8'))
                client.close()
                return

    
            #  verificar se contÃ©m palavras proibidas
            if any(p in texto.lower() for p in PALAVRAS_PROIBIDAS):
                infracoes[nickname] = infracoes.get(nickname, 0) + 1

                if infracoes[nickname] >= 3:
                    banidos.add(nickname)
                    client.send("ðŸš« VocÃª foi banido por linguagem inapropriada.\n".encode('utf-8'))
                    broadcast(f"\033[91m>> {nickname} foi banido do chat.\033[0m\n".encode('utf-8'))
                    client.close()
                    if client in clients:
                        index = clients.index(client)
                        clients.remove(client)
                        nicknames.pop(index)
                    return
                else:
                    aviso = f"âš ï¸ Aviso: Linguagem inapropriada ({infracoes[nickname]}/3)\n"
                    client.send(aviso.encode('utf-8'))


            # Filtra e envia mensagem
           
            texto_filtrado = filtrar_mensagem(texto)
            broadcast(texto_filtrado.encode('utf-8'))

        except:
            if client in clients:
                index = clients.index(client)
                nick = nicknames[index]

                clients.remove(client)
                nicknames.remove(nick)

                broadcast(f"\033[91m>> {nick} saiu do chat.\033[0m\n".encode('utf-8'))

                if len(clients) == 0:
                    print("Nenhum cliente conectado. Servidor aguardando novas conexÃµes...")

            client.close()
            break


def receive():
    print("Servidor rodando e aguardando conexÃµes...")
    while True:
        client, address = server.accept()
        print(f"Conectado com {str(address)}")

        client.send('NICK'.encode('utf-8'))
        nickname = client.recv(1024).decode('utf-8')

        
        # Impede entrada de banidos
        
        if nickname in banidos:
            client.send("ðŸš« VocÃª estÃ¡ banido e nÃ£o pode entrar no chat.\n".encode('utf-8'))
            client.close()
            continue

        nicknames.append(nickname)
        clients.append(client)

        print(f"Apelido do cliente: {nickname}")
        broadcast(f">> {nickname} entrou no chat!\n".encode('utf-8'))
        client.send('Conectado ao servidor!\n'.encode('utf-8'))

        thread = threading.Thread(target=handle, args=(client, nickname), daemon=True)
        thread.start()


receive()

import socket
import threading

HOST = '127.0.0.1'
PORT = 55555

server = socket.socket(socket.AF_INET, socket.SOCK_STREAM) #cria um socket TCP
server.bind((HOST, PORT))
server.listen() #comeÃ§a a aceitar conexÃµes

clients = [] #guarda os sockets dos clientes conectados
nicknames = [] #guarda os apelidos dos clientes conectados


# Controle de banimentos e censura

PALAVRAS_PROIBIDAS = ["idiota", "burro", "imbecil", "burrao"]
banidos = set()
infracoes = {}  # conta quantas vezes cada usuÃ¡rio foi avisado

def filtrar_mensagem(texto): #substitui palavras proibidas por ***
    for palavra in PALAVRAS_PROIBIDAS:
        if palavra.lower() in texto.lower():
            texto = texto.lower().replace(palavra.lower(), "***")
    return texto



def broadcast(message): #envia mensagem para todos os clientes conectados
    for client in clients[:]:
        try:
            client.send(message)
        except:
            if client in clients:
                clients.remove(client) #remove cliente da lista se nÃ£o puder enviar


def handle(client, nickname):
    while True:
        try:
            message = client.recv(1024)
            texto = message.decode('utf-8')

           
            # verificaÃ§Ã£o de banimento
            if nickname in banidos:
                client.send("VocÃª foi banido do chat.\n".encode('utf-8'))
                client.close()
                return

    
            #  verificar se contÃ©m palavras proibidas
            if any(p in texto.lower() for p in PALAVRAS_PROIBIDAS):
                infracoes[nickname] = infracoes.get(nickname, 0) + 1 #incrementa o contador de infraÃ§Ãµes se houver palavra proibida

                if infracoes[nickname] >= 3:
                    banidos.add(nickname) #adiciona o usuÃ¡rio Ã  lista de banidos
                    client.send("ðŸš« VocÃª foi banido por linguagem inapropriada.\n".encode('utf-8'))
                    broadcast(f"\033[91m>> {nickname} foi banido do chat.\033[0m\n".encode('utf-8'))
                    client.close() #fecha o socket
                    if client in clients:
                        index = clients.index(client)
                        clients.remove(client)
                        nicknames.pop(index) #remove apelido da lista
                    return 
                else:
                    aviso = f"âš ï¸ Aviso: Linguagem inapropriada ({infracoes[nickname]}/3)\n"
                    client.send(aviso.encode('utf-8'))
           
            texto_filtrado = filtrar_mensagem(texto) #chama a funÃ§Ã£o de filtro
            broadcast(texto_filtrado.encode('utf-8')) #envia a mensagem filtrada para todos os clientes

        except: #se um socket for fechado ou der erro, remove o cliente da lista
            if client in clients:
                index = clients.index(client)
                nick = nicknames[index]

                clients.remove(client)
                nicknames.remove(nick)

                broadcast(f"\033[91m>> {nick} saiu do chat.\033[0m\n".encode('utf-8'))

                if len(clients) == 0:
                    print("Nenhum cliente conectado. Servidor aguardando novas conexÃµes...")

            client.close()
            break


def receive():
    print("Servidor rodando e aguardando conexÃµes...")
    while True:
        client, address = server.accept()
        print(f"Conectado com {str(address)}")

        client.send('NICK'.encode('utf-8')) #envia o token NICk ao socket recem conectado
        nickname = client.recv(1024).decode('utf-8') #recebe o apelido do cliente

        
        # Impede entrada de banidos
        
        if nickname in banidos:
            client.send("ðŸš« VocÃª estÃ¡ banido e nÃ£o pode entrar no chat.\n".encode('utf-8'))
            client.close() #fecha o socket
            continue

        nicknames.append(nickname) #adiciona o apelido Ã  lista
        clients.append(client) #adiciona o socket do cliente Ã  lista

        print(f"Apelido do cliente: {nickname}")
        broadcast(f">> {nickname} entrou no chat!\n".encode('utf-8'))
        client.send('Conectado ao servidor!\n'.encode('utf-8'))

        thread = threading.Thread(target=handle, args=(client, nickname), daemon=True) #cria uma thread para lidar com o cliente
        thread.start()


receive()

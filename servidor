import socket
import threading
import re

HOST = '127.0.0.1'
PORT = 55555

server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
server.bind((HOST, PORT))
server.listen()

clients = []
users = []

VALIDO = re.compile(r'^[A-Za-z0-9_]+$')

def user_valido(name):
    if name in users:
        return False, "üö´ Nome j√° em uso. Escolha outro."
    return True, ""

PALAVRAS_PROIBIDAS = ["idiota", "burro", "imbecil", "burrao"]
banidos = set()
infracoes = {}

def filtrar_mensagem(texto):
    for palavra in PALAVRAS_PROIBIDAS:
        if palavra.lower() in texto.lower():
            texto = texto.lower().replace(palavra.lower(), "***")
    return texto

def broadcast(message):
    for client in clients[:]:
        try:
            client.send(message)
        except:
            if client in clients:
                clients.remove(client)

def handle(client, user):
    while True:
        try:
            message = client.recv(1024)
            texto = message.decode('utf-8')

            if user in banidos:
                client.send("üö´ Voc√™ foi banido do chat.\n".encode('utf-8'))
                client.close()
                return

            if any(p in texto.lower() for p in PALAVRAS_PROIBIDAS):
                infracoes[user] = infracoes.get(user, 0) + 1

                if infracoes[user] >= 3:
                    banidos.add(user)
                    client.send("üö´ Voc√™ foi banido por linguagem inapropriada.\n".encode('utf-8'))
                    broadcast(f"\033[91m>> {user} foi banido do chat.\033[0m\n".encode('utf-8'))
                    client.close()
                    if client in clients:
                        index = clients.index(client)
                        clients.remove(client)
                        users.pop(index)
                    return
                else:
                    aviso = f"‚ö†Ô∏è Aviso: Linguagem inapropriada ({infracoes[user]}/3)\n"
                    client.send(aviso.encode('utf-8'))

            texto_filtrado = filtrar_mensagem(texto)
            broadcast(texto_filtrado.encode('utf-8'))

        except:
            if client in clients:
                index = clients.index(client)
                nick = users[index]
                clients.remove(client)
                users.remove(nick)
                broadcast(f"\033[91m>> {nick} saiu do chat.\033[0m\n".encode('utf-8'))
            client.close()
            break


def receive():
    print("Servidor rodando e aguardando conex√µes...")
    while True:
        client, address = server.accept()
        print(f"Conectado com {str(address)}")
        client.send('NICK'.encode('utf-8'))

        while True:
            user = client.recv(1024).decode('utf-8').strip()
            valido, msg = user_valido(user)

            if not valido:
                client.send(f"{msg}\n".encode('utf-8'))
                continue  # volta a pedir outro nome

            if user in banidos:
                client.send("üö´ Voc√™ est√° banido e n√£o pode entrar no chat.\n".encode('utf-8'))
                client.close()
                break

            client.send("OK".encode('utf-8'))  # aceita o nome
            users.append(user)
            clients.append(client)
            print(f"Usu√°rio do cliente: {user}")
            broadcast(f">> {user} entrou no chat!\n".encode('utf-8'))
            client.send('Conectado ao servidor!\n'.encode('utf-8'))

            thread = threading.Thread(target=handle, args=(client, user), daemon=True)
            thread.start()
            break  # sai do loop interno e continua ouvindo novas conex√µes


receive()
